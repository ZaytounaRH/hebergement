{% extends 'base.html.twig' %}

{% block title %}Liste des Employés{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="text-center mb-4">Liste des Employés</h1>

        <!-- Liste des employés -->
        <ul class="list-group">
            {% for employe in employes %}
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-0">{{ employe.getUser.nom }} {{ employe.getUser.prenom }}</h5>
                    </div>
                </li>
            {% else %}
                <li class="list-group-item text-center text-muted">Aucun employé trouvé.</li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}
