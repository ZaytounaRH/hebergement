        }

        .btn-export {
            background-color: #c0392b;
            color: white;
        }

        .btn-export:hover {
            background-color: #a93226;
        }

        pre {
            background-color: #f8f9fa;
            padding: 1rem;
            border-radius: 8px;
            overflow-x: auto;
        }
