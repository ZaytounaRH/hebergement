{% block stylesheets %}
    {{ parent() }}
    <link href="https://unpkg.com/aos@2.3.4/dist/aos.css" rel="stylesheet">
    <style>
        body {
            background-image: url('/images/background-ocr.jpg');
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
